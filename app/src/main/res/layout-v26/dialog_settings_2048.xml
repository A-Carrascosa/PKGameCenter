<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:padding="20dp">

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/cheats"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/cheat_mode"
        android:textAppearance="@style/Large"
        android:textColor="@null"
        android:theme="@style/SCBSwitch" />

    <View
        android:id="@+id/divider"
        android:layout_below="@id/cheats"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginVertical="10dp"
        android:background="?android:attr/listDivider" />

    <TextView
        android:id="@+id/labelmap"
        android:textAppearance="@style/Large"
        android:textColor="@null"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/divider"
        android:text="@string/grid_size"/>

    <RadioGroup
        android:id="@+id/maps"
        android:layout_below="@+id/labelmap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/map3"
            android:textColor="@null"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="@string/_3x3"
            android:textSize="17sp"
            android:textAppearance="@style/SCBSwitch"
            android:theme="@style/SCBSwitch" />

        <RadioButton
            android:id="@+id/map4"
            android:textColor="@null"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="@string/_4x4"
            android:textSize="17sp"
            android:textAppearance="@style/SCBSwitch"
            android:theme="@style/SCBSwitch" />

        <RadioButton
            android:id="@+id/map5"
            android:textColor="@null"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="@string/_5x5"
            android:textSize="17sp"
            android:textAppearance="@style/SCBSwitch"
            android:theme="@style/SCBSwitch" />

    </RadioGroup>

    <Button
        android:id="@+id/apply_settings_2048"
        android:layout_below="@id/maps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/apply"/>
</RelativeLayout>